# Archivo de Ejemplo para Credenciales
# ===================================
# IMPORTANTE: Este es un archivo de ejemplo. 
# Copia este archivo como 'credentials.yaml' y completa con tus credenciales reales.
# NUNCA subas el archivo credentials.yaml a Git.

# Base de Datos Local
database:
  local:
    password: "tu_password_aqui"
    
# APIs Públicas
apis:
  openweather:
    api_key: "tu_api_key_de_openweather"
  github:
    token: "tu_github_token_aqui"
    
# Servicios de Cloud (Solo para niveles Mid y Senior)
cloud:
  aws:
    access_key_id: "tu_aws_access_key"
    secret_access_key: "tu_aws_secret_key"
    
  gcp:
    service_account_key: "ruta/a/tu/service-account-key.json"
    
  azure:
    client_id: "tu_azure_client_id"
    client_secret: "tu_azure_client_secret"
    tenant_id: "tu_azure_tenant_id"

# Variables de Entorno Sensibles
environment:
  secret_key: "tu_secret_key_para_cifrado"
  jwt_secret: "tu_jwt_secret_key"

# Configuración de Correo (para notificaciones de pipelines)
email:
  smtp_server: "smtp.gmail.com"
  smtp_port: 587
  username: "tu_email@gmail.com"
  password: "tu_app_password"